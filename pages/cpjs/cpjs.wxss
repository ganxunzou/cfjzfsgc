.cpjs{
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.wmfs{
  margin-top: 20rpx;
  background-color: #B3FEFD;
  padding: 12rpx 26rpx;
  border-radius: 60rpx;
  font-size: 34rpx;
}
.c-container{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: left;
  justify-content: center;
  box-sizing: content-box;
}
.c-title{
  height: 60rpx;
  line-height: 60rpx;
  background-color: #43D3ED;
  padding: 4rpx 20rpx;
  color: #fff;
  font-size: 32rpx;
}
.cp-contaienr
{
  flex: 1;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.cp{
  width: 33%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20rpx;
}
.img{
  width: 100%;
  height: 220rpx;
}
.text
{
  padding-top: 15rpx;
  min-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
}