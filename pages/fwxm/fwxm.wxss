/* pages/fwxm/fwxm.wxss */
.fwxm{
  display: flex;
  flex-direction: column;
  
}
.logo{
  height: 260rpx;
  width: 100%;
  flex: 1;
  margin: 40rpx 0;
}
.fw-container{
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;

}
.item{
  height: 350rpx; 
  width: 43%;
  display: flex;
  flex-direction: column;
  background-color: red;
  margin: 20rpx 20rpx;
}
.title
{
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 10rpx;
  text-align: center;
  font-size: 34rpx;
  width: 100%;
  box-sizing: border-box;
}
.desc{
  width: 100%;
  padding: 10rpx;
  flex: 1;
  font-size: 28rpx;
  color: #fff;
  box-sizing: border-box;

}
.fw-desc{
  margin: 10rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}
.slide-image
{
  width: 100%;
  height: 100%;
}
.swiper{
  height: 300rpx;
  margin-bottom: 10rpx;
}