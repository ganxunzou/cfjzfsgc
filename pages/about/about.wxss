/* pages/about/about.wxss */
.about{
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
}
.map-view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 15rpx 0rpx;
}
.map{
  height: 300rpx;
  width: 100%;
}
.map-text{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
  color:#5d5d5d;
}
.map-button{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  width: 100%;
  background-color: #2AA11E;
  color: #fff;
}
.about-info{
  display: flex;
  flex-wrap: wrap;
  margin-top: 5rpx;
}
.text-info{
  width: 50%;
  font-size: 26rpx;
  margin: 8rpx 0;
  color: #333;
}
.text-wz{
  font-size: 28rpx;
  color: #333;
}
.text-phone{
  color: #2081EA;
}